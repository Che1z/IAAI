@model IAAI0731.Models.ViewModel.ForumReplyVM

@{
    ViewBag.Title = "Reply";
}

<div class="col-lg-12 col-md-9 col-sm-12 col-xs-12">

    <h2 class="page-title">討論區</h2>
    <hr class="botmargin-min">
    <!-- 內容開始 -->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <p>
                        <b>回應主題:</b> @Model.forum.Title
                    </p>
                    <input type="hidden" name="id" value="@Model.forum.Id">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <p><b>回應內容:</b></p>
                    @Html.TextAreaFor(model => model.forumReply.ReplyContent, new { @class = "form-control ckeditor", name = "ckeditor" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="送出" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("返回列表", "Forum", "UserAuth")
    </div>
</div>


<script>
    var editor = CKEDITOR.replace('ckeditor');
</script>
