@model IAAI0731.Models.ViewModel.UserRegistrationVM
@using IAAI0731.Models

@{
    ViewBag.Title = "SignUp";

}

<style>
    .dropdown-option {
        color: black;
    }
</style>



@{if (!string.IsNullOrEmpty(ViewBag.Require))
    {
        <div class="text-danger">
            <h2 style="color:darkred">
                @ViewBag.Require
            </h2>
        </div> }
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2 class="page-title">會員註冊</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- UserList 欄位 -->
        <div class="form-group">
            @Html.LabelFor(model => model.User.Account, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.User.Account, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入帳號" } })
                @Html.ValidationMessageFor(model => model.User.Account, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Password, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.PasswordFor(model => model.User.Password, new { @class = "form-control ", placeholder = "請輸入密碼" })
                @Html.ValidationMessageFor(model => model.User.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.User.Name, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入姓名" } })
                @Html.ValidationMessageFor(model => model.User.Name, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.User.Gender, htmlAttributes: new { @class = "control-label col-sm-2 " })
            <div class="col-sm-7">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <label class="checkbox-inline checkbox01">
                        @Html.RadioButtonFor(model => model.User.Gender, gender, new { @class = "radiostyle01" })
                        @gender.ToString()
                    </label>}
                @Html.ValidationMessageFor(model => model.User.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Birthday, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.User.Birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", placeholder = "請輸入生日" })
                @Html.ValidationMessageFor(model => model.User.Birthday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.MembershipType, htmlAttributes: new { @class = "control-label col-sm-2 " })
            <div class="col-sm-7">
                @foreach (var membershipType in Enum.GetValues(typeof(MembershipType)))
                {
                    <label class="checkbox-inline checkbox01">
                        @Html.RadioButtonFor(model => model.User.MembershipType, membershipType, new { @class = "radiostyle01" })
                        @membershipType.ToString()
                    </label>}
                @Html.ValidationMessageFor(model => model.User.MembershipType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Address, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.User.Address, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入地址" } })
                @Html.ValidationMessageFor(model => model.User.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Email, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.User.Email, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入信箱" } })
                @Html.ValidationMessageFor(model => model.User.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.IsInternationalMember, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-7">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.User.IsInternationalMember, new { @class = "radiostyle01" })
                        為國際縱火調查學會之當年度有效會員，請檢附會員證影本
                    </label>
                </div>
                @Html.ValidationMessageFor(model => model.User.IsInternationalMember, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.CurrentPosition, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.User.CurrentPosition, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入現職單位" } })
                @Html.ValidationMessageFor(model => model.User.CurrentPosition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.JobTitle, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.EditorFor(model => model.User.JobTitle, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入職稱" } })
                @Html.ValidationMessageFor(model => model.User.JobTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.HighestEducation, new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.EnumDropDownListFor(model => model.User.HighestEducation, new { @class = "form-control dropdown-option" })
                @Html.ValidationMessageFor(model => model.User.HighestEducation, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="boxg">
            <h4 class="col-sm-2">
                <i class="fa fa-briefcase"> 服務經歷</i>
            </h4>
            <div class="form-group">
                @Html.LabelFor(model => model.ServiceExperience.ServiceCompany, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-7">
                    @Html.EditorFor(model => model.ServiceExperience.ServiceCompany, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入服務單位" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceExperience.JobTitle, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-7">
                    @Html.EditorFor(model => model.ServiceExperience.JobTitle, new { htmlAttributes = new { @class = "form-control ", placeholder = "請輸入職稱" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("StartYear", "起", htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.ServiceExperience.StartYear, new { htmlAttributes = new { @class = "form-control ", placeholder = "年" } })
                </div>
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.ServiceExperience.StartMonth, new { htmlAttributes = new { @class = "form-control ", placeholder = "月" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("EndYear", "訖", htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.ServiceExperience.EndYear, new { htmlAttributes = new { @class = "form-control ", placeholder = "年" } })
                </div>
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.ServiceExperience.EndMonth, new { htmlAttributes = new { @class = "form-control ", placeholder = "月" } })
                </div>
            </div>
        </div>





        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Captcha, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Captcha, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入驗證碼" } })
                    @Html.ValidationMessageFor(model => model.Captcha, "", new { @class = "text-danger" })
                    @{if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="text-danger">
                                @ViewBag.Error
                            </div> }
                    }
                </div>
                <div class="col-sm-4">
                    <img src="~/Asset/Images/test.jpg" alt="Alternate Text" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TotalYearsOfExperience, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.TotalYearsOfExperience, new { htmlAttributes = new { @class = "form-control", placeholder = "年" } })
                </div>
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.TotalMonthsOfExperience, new { htmlAttributes = new { @class = "form-control", placeholder = "月" } })
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="註冊" class="btn btn-primary solid blank" />
                </div>
            </div>

        </div>
    </div>
}




