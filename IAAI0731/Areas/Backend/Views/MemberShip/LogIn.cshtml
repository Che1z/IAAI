@model IAAI0731.Models.ViewModel.LogInVM

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Areas/Backend/Views/MemberShip/_SignupLayout.cshtml";

}



@{if (!string.IsNullOrEmpty(ViewBag.Require))
    {
        <div class="text-danger text-center">
            <h4 style="color:darkred">
                @ViewBag.Require
            </h4>
        </div> }
}


<div class="mb-3 text-center">
    <i class="feather icon-unlock auth-icon" style="font-size:40px"></i>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="mb-4 text-center">登入</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="input-group mb-3">
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入帳號" } })
                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "請輸入密碼" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-md-offset-2 ">
                <input type="submit" value="登入" class="btn btn-primary shadow-2" />
            </div>
        </div>
        <div class="text-center">
            <p class="mb-0 text-muted">還沒有帳戶? <a href="~/Backend/MemberShip/SignUp">註冊</a></p>
        </div>
    </div>
}

