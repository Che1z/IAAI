@model IAAI0731.Models.BackModel.AboutUs

@{
    ViewBag.Title = "AssociationIntro";
    Layout = "~/Areas/Backend/Views/MainPanel/_MainPanel.cshtml";
}



<style>
    .page-title {
        text-align: left;
    }
</style>

<div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
    <h2 class="page-title">協會介紹編輯頁</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control ckeditor", name = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="儲存" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

<script>
    var editor = CKEDITOR.replace('ckeditor', {
        contentsCss:
            '/Asset/css/bootstrap.min.css'
    });
    CKFinder.setupCKEditor(editor);
</script>

